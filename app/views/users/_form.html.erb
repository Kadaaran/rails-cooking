<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, required: true, type: 'email' %>
  </p>
  <p>
    <%= f.label :company %><br>
    <%= f.collection_select(:company_id, Company.all, :id, :name, required: true) %>
  </p>

  <p class="button">
    <%= f.submit disabled: true%>
  </p>
<% end %>
